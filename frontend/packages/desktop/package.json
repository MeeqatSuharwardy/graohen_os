{
  "name": "@flashdash/desktop",
  "version": "1.0.0",
  "description": "Professional GrapheneOS flashing dashboard for Pixel devices",
  "author": "FlashDash Team",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "pnpm build:electron && concurrently \"vite\" \"tsc -p tsconfig.electron.json --watch\" \"wait-on http://localhost:5174 && electron .\"",
    "build": "pnpm build:app && pnpm build:electron && SNAP_CRAFT_PATH= electron-builder --linux AppImage deb",
    "build:app": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:mac": "pnpm build:app && pnpm build:electron && electron-builder --mac",
    "build:win": "pnpm build:app && pnpm build:electron && electron-builder --win",
    "build:linux": "pnpm build:app && pnpm build:electron && electron-builder --linux",
    "preview": "vite preview",
    "lint": "eslint .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@flashdash/ui": "workspace:*",
    "axios": "^1.6.5",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.309.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "28.3.3",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.28.1",
    "wait-on": "^7.2.0"
  }
}
